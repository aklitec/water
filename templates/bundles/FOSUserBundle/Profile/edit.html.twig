{% extends 'layout.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% trans_default_domain 'user' %}
{%  set locale = app.request.getLocale() %}

{% block title %}  {{ 'edit_profile' | trans }} | {{ parent() }} {% endblock %}

{% block pageHeader %}
    <div class="page-header">
        <h1 class="page-title">
            {{ 'edit_profile' | trans }}
        </h1>
    </div>
{% endblock %}

{% block content %}
<style type="text/css">
                        {% if locale =="ar_MA"%}
                        .costumClass{
                            flex-direction:row-reverse;
                        }
                        .ml-auto{
                            margin-left: auto !important;
                        }
                        {% endif %}
</style>
    <div class="row col-12">

        <div class="card">
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

            <!-- Card Header -->
            {# <div class="card-header">
                <h3 class="card-title">{{ 'edit_profile' | trans }}</h3>
            </div> #}

            <!-- Card Body -->
            <div class="card-body">

                <div class="row">
                    <div class="col-md-6 col-sm-12">{{ form_row(form.username) }}</div>
                    <div class="col-md-6 col-sm-12">{{ form_row(form.email) }}</div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-sm-12">{{ form_row(form.current_password) }}</div>
                </div>
                
            </div>

            <!-- Card Footer -->
            <div class="card-footer">
                <div class="d-flex costumClass">
                    <a href="{{ path('fos_user_profile_show') }}" class="btn btn-link">{{ 'Cancel' | trans }}</a>
                    <button type="submit" class="btn btn-primary ml-auto">{{ 'Submit' | trans  }}</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
