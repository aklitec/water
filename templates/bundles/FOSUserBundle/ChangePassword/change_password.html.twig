{% extends 'layout.html.twig' %}

{% trans_default_domain 'user' %}

{% set locale = app.request.getLocale() %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}  {{ 'change_password' | trans }} | {{ parent() }} {% endblock %}

{% block pageHeader %}
    <div class="page-header">
        <h1 class="page-title">
            {{ 'users.show.changePassword' | trans }}
        </h1>
    </div>
{% endblock %}

{% block content %}
    <style type="text/css">
        {% if locale =="ar_MA"%}
        .costumClass {
            flex-direction: row-reverse;
        }
        .ml-auto {
            margin-left: auto !important;
        }
        {% endif %}
    </style>
    <div class="row col-12">

        <div class="card">
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

            <!-- Card Body -->
            <div class="card-body">

                {{ form_widget(form) }}

            </div>

            <!-- Card Footer -->
            <div class="card-footer">
                <div class="d-flex costumClass">
                    <a href="{{ path('fos_user_profile_show') }}" class="btn btn-link">{{ 'users.actions.cancel' | trans }}</a>
                    <button type="submit" class="btn btn-primary ml-auto">{{ 'users.actions.submit' | trans }}</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
