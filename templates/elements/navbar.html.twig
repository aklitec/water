                        <a href="{{ path('client_index') }}" class="nav-link {{ 'client_index' in route ? 'active' }} " ><i class="fe fe-user"></i> {{ 'nav.clients' | trans}}</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('users_index') }}" class="nav-link {{ 'users_index' in route ? 'active' }} " ><i class="fe fe-user"></i> {{ 'nav.users' | trans}}</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('doc_index') }}" class="nav-link {{ 'doc_index' in route ? 'active' }}"><i class="fe fe-file-text"></i>{{ 'nav.docs' | trans}}</a>
