{% trans_default_domain 'WaterMeters' %}

<div class="tab-pane container active" id="waterMeter">
    <div class="card-header">
        <h3 class="card-btn">
            <a href="{{ path('water_meter_new',{'id':client.id})}}"  class="btn btn-pill btn-outline-primary">
                <i class="fe fe-plus"></i> {{'WaterMeters.actions.add'|trans}}
            </a>
             <a href="{{ path('water_meter_new',{'id':client.id}) }}"  class="btn btn-pill btn-outline-success d-none d-md-inline-block">
                 <i class="fe fe-file"></i> {{'WaterMeters.actions.export.pdf'|trans}}
             </a>
             <a href="{{ path('water_meter_new',{'id':client.id}) }}"  class="btn btn-pill btn-outline-danger d-none d-sm-inline-block">
                 <i class="fe fe-file-text"></i> {{'WaterMeters.actions.export.excel'|trans}}
             </a>
        </h3>
        <div class="card-options">
            <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
            <a href="#" class="card-options-fullscreen" data-toggle="card-fullscreen"><i class="fe fe-maximize"></i></a>
            <a href="#" class="card-options-remove" data-toggle="card-remove"><i class="fe fe-x"></i></a>
        </div>
    </div>
    <div class="table-responsive">

        <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
            <thead>
            <tr>
                <th >{{ 'WaterMeters.form.code' | trans }}</th>
                <th>{{ 'WaterMeters.form.setupDate' | trans }}</th>
                <th>{{ 'WaterMeters.form.createdAt'| trans  }}</th>
                <th class="col-2">{{ 'WaterMeters.form.active'| trans  }}</th>
                <th class="text-right"> {{ 'WaterMeters.form.actions'| trans  }}</th>
            </tr>
            </thead>
            <tbody>
            {% for waterMeter in waterMeters %}
                <tr>
                    <td> <span class="tag">{{ waterMeter.code | lower }}</span></td>
                    <td>{{ waterMeter.setupDate | date }}</td>
                    <td>{{ waterMeter.createdAt | date }}</td>
                    <td class="text-center">
                        <div class="avatar d-block">
                            <span class="avatar-status bg-green"></span>
                            <span class="tag">{{ waterMeter.active ? 'Active' : 'Disactivated' | capitalize}}</span>
                        </div>
                    </td>
                    <td class="text-right">
                            <a href="{{ path('water_meter_edit', {'id': waterMeter.id}) }}" class="btn btn-sm btn-outline-warning" title="{{'edit'|trans({},'actions')}}"><i class="fe fe-edit"></i></a>
                        {%   include('water_meter/_delete_form.html.twig') %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="14">{{'WaterMeters.index.noData'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>