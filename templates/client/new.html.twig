
{% extends 'layout.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% trans_default_domain 'clients' %}

{% block title %}{{ 'clients.new' | trans }}{% endblock %}

{% block pageHeader %}
    <div class="page-header">
        <div>
            <h1 class="page-title">
                {{ 'clients.new' | trans }}
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="fe fe-home"></i>{{ 'clients.index.homepage' | trans }}</a></li>
                <li><a href="{{ path('client_index') }}"> {{ 'clients.index.clients' | trans }} </a></li>
                <li class="active">{{ 'clients.new.title' | trans }}</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row row-cards">
        <div class="col-12">

            <div class="card">
                <div class="card-header isolated">
                    <h3 class="card-title"> {{ 'clients.new.title' | trans }} </h3>
                </div>
            </div>

            {{ form_start(form) }}

            <div class="card">
                <div class="card-body">
                    <div class="card-body-title">{{ 'clients.form.infos'|trans }}<div class="pull-right"></div></div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">{{ form_row(form.firstName) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.lastName) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.cin) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.phoneNumber) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.imageFile)}}</div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="card-body-title">{{ 'clients.show.address'|trans }}<div class="pull-right"></div></div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">{{ form_row(form.address.streetAddress) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.address.suit) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.address.city) }}</div>
                        <div class="col-md-6 col-sm-12">{{ form_row(form.address.zipCode) }}</div>
                    </div>
                </div>
            </div>


            <div class="card">
                <div class="card-footer isolated">
                    <div class="d-flex">
                        <a href="{{ path('client_index') }}" class="btn btn-link">{{'clients.actions.cancel'|trans}}</a>
                        <button type="submit" class="btn btn-primary ml-auto"> <i class="fe fe-save"></i> {{'clients.actions.save'|trans}}</button>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}

        </div>

    </div>

{% endblock %}



